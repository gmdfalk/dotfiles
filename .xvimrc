
" Make Vim more useful
set nocompatible
" Use the OS clipboard by default (on versions compiled with `+clipboard`)
set clipboard=unnamed
" Enhance command-line completion
set wildmenu
" Allow cursor keys in insert mode
set esckeys
" Allow backspace in insert mode
set backspace=indent,eol,start
" Optimize for fast terminal connections
set ttyfast
" Add the g flag to search/replace by default
set gdefault
" Use UTF-8 without BOM
set encoding=utf-8 nobomb
" Change mapleader
let mapleader=","
" Don’t add empty newlines at the end of files
set binary
set noeol

" Respect modeline in files
set modeline
set modelines=4
" Enable per-directory .vimrc files and disable unsafe commands in them
set exrc
set secure
" Enable line numbers
set number
" Enable syntax highlighting
syntax on
" Highlight current line
set cursorline
" Highlight cursor periodically
set blinkcursor
" Insert space characters whenever the tab key is pressed
set expandtab
" Make tabs as wide as two spaces
set tabstop=4
" Change the number of space characters inserted for indentation
set shiftwidth=4
" Show “invisible” characters
"set lcs=tab:▸\ ,trail:·,eol:¬,nbsp:_
set list
" Highlight searches
set hlsearch
" Ignore case of searches
set ignorecase
" Unless there are capital letters in the search term
set smartcase
" Highlight dynamically as pattern is typed
set incsearch
" Always show status line
set laststatus=2
" Enable mouse in all modes
set mouse=a
" Disable error bells
set noerrorbells
" Don’t reset cursor to start of line when moving around.
set nostartofline
" Show the cursor position
set ruler
" Don’t show the intro message when starting Vim
set shortmess=atI
" Show the current mode
set showmode
" Show the filename in the window titlebar
set title
" Show the (partial) command as it’s being typed
set showcmd
" Use relative line numbers
if exists("&relativenumber")
	set relativenumber
	au BufReadPost * set relativenumber
endif
" Start scrolling three lines before the horizontal window border
set scrolloff=3

" Save a file as root (,W)
let mapleader = ","
let g:mapleader = ","
map ,W :w !sudo tee % > /dev/null<CR>

" Visual mode mappings
vmap <C-h> :xccmd shiftLeft<CR>gv
vmap <C-l> :xccmd shiftRight<CR>gv
"vmap <C-j> :xccmd moveCurrentLineDown<CR>gv
"vmap <C-k> :xccmd moveCurrentLineUp<CR>gv
"nmap 

" Normal mode mappings
nmap gc :xccmd jumpToNextCounterpart<CR>
nmap gt :xccmd selectNextTab<CR>
nmap gT :xccmd selectPreviousTab<CR>
nmap gi :xccmd jumpToNextIssue<CR>
nmap gI :xccmd jumpToPreviousIssue<CR>
nmap ,c :xccmd commentAndUncommentCurrentLines<CR>
vmap ,c :xccmd commentAndUncommentCurrentLines<CR>gv
"nmap gp :xccmd
